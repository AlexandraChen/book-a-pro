<div class="col-sm-6">
	  <div class="review-header">
	  	<hr>
	    	<% case review.rating  %>
	    		<% when 1 %>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star-empty"></i>
	    			<i class="glyphicon glyphicon-star-empty"></i>
	    			<i class="glyphicon glyphicon-star-empty"></i>
	    			<i class="glyphicon glyphicon-star-empty"></i>
	    		<% when 2 %>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star-empty"></i>
	    			<i class="glyphicon glyphicon-star-empty"></i>
	    			<i class="glyphicon glyphicon-star-empty"></i>
	    		<% when 3 %>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star-empty"></i>
	    			<i class="glyphicon glyphicon-star-empty"></i>
	    		<% when 4 %>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star-empty"></i>
	    		<% when 5 %>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star"></i>
	    			<i class="glyphicon glyphicon-star"></i>
	    	<% end %>
	    	<%= review.title %>
	    	<br>
	    	by <%= review.user.name%>
	  <div class="review-description">
	    <p><%= review.description %></p>
	  </div>
	</div>
	<br>
	<hr>
</div>
