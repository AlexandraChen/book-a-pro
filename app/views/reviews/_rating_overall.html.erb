<div class="row pro-rating">
	<div class="col-sm-12 over-all">
		<% if @pro_user.reviews.empty? %>
			<i class="glyphicon glyphicon-star-empty"></i>
			<i class="glyphicon glyphicon-star-empty"></i>
			<i class="glyphicon glyphicon-star-empty"></i>
			<i class="glyphicon glyphicon-star-empty"></i>
			<i class="glyphicon glyphicon-star-empty"></i>
			<p> <%= @pro_user.user.name %> has 0 reviews. Write the first one!</p>
		<% else %>
			<% case @rating %>
				<% when 1 %>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star-empty"></i>
					<i class="glyphicon glyphicon-star-empty"></i>
					<i class="glyphicon glyphicon-star-empty"></i>
					<i class="glyphicon glyphicon-star-empty"></i>
				<% when 2 %>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star-empty"></i>
					<i class="glyphicon glyphicon-star-empty"></i>
					<i class="glyphicon glyphicon-star-empty"></i>
				<% when 3 %>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star-empty"></i>
					<i class="glyphicon glyphicon-star-empty"></i>
				<% when 4 %>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star-empty"></i>
				<% when 5 %>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star"></i>
					<i class="glyphicon glyphicon-star"></i>
			<% end %>
		<% end %>
	</div>
</div>