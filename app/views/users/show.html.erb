<div class="container">
	<div class="row">
		<div class="col-sm-2 col-sm-offset-1">
			<div class="prof-pic-small">
				<% if @user.prof_pic_file_name === nil%>
					<p>Prof pic avatar here</p>	
				<% else %>
					<%= image_tag @user.prof_pic.url(:small)%>
				<% end %>
			</div>	
			<% if current_user.id === @user.id%>
				<p class="edit-pic-link"><%= link_to "Edit profile picture", user_edit_profpic_path(current_user.id) %><p>
			<% end %>
		</div>

		<div class="col-sm-5 users">
			<a id="show-reservations"> View my reservations </a>
			<div class="my-reservations" hidden>
				<%if current_user.reservations.empty?%>
					<p> No reservations made yet! </p>
				<% else %>
					<% current_user.reservations.each do |reservation| %>
						<%= reservation.date.strftime("%d/%m/%y") %> with 
						<%= link_to reservation.professional.user.name, professional_path(reservation.professional_id) %> | <a class="view-reservation">View more details</a>
						<div class="reservation" hidden>
							<%= render partial: 'reservations/reservation', locals: {reservation: reservation}%>
						</div>
					<% end %>
				<% end %>		
			</div>
			<br>
			<br>
			<p>E-mail: <%= @user.email %></p>
			<p>Password: ******* <%= link_to "Change your password", user_edit_password_path(current_user.id) %></p>
			<br>
			<br>
			<% if current_user.professional %>
				<%= link_to "View my professional profile", user_professional_path(current_user.id,@user.professional.id) %>
			<% else %>
				<%= link_to 'Create a professional profile', new_user_professional_path(current_user.id), class:"btn btn-primary btn-md" %>
			<%end %>
		</div>
		
	</div>
</div>
