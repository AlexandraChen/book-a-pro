<div class="container">
	<div class="row">
		<div class="col-sm-3 col-sm-offset-1">
			<% if @user.prof_pic_file_name === nil%>
				<div class="prof-pic">
					<p>Prof pic avatar here</p>
				</div>
			<% else %>
				<%= image_tag @user.prof_pic.url(:medium), class: "prof-pic"%>
			<% end %>	
			<% if current_user.id === @user.id%>
				<p class="edit-pic-link"><%= link_to "Edit profile picture", user_edit_profpic_path(current_user.id) %><p>
			<% end %>
		</div>

		<div class="col-sm-4 users">
			<p>Hi, <%= @user.name %></p>
			<p>E-mail: <%= @user.email %></p>
			<p>Password: ******* <%= link_to "Change your password", user_edit_password_path(current_user.id) %></p>
			<% if current_user.professional %>
				<%= link_to "View my professional profile", user_professional_path(current_user.id,@user.professional.id) %>
			<% else %>
				<%= link_to 'Create a professional profile', new_user_professional_path(current_user.id), class:"btn btn-primary btn-md" %>
			<%end %>
		</div>
		
	</div>
</div>
