<!DOCTYPE html>
<html>
<head>
  <title>Book-a-Pro</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"> <!-- have to fix twitter bootstrap gem glyphicon -->
  <link rel="shortcut icon" href="/assets/sites/icon_header.jpg">
</head>
<body>
  <header>
    <%= render partial: 'layouts/navbar' %>
    <% if notice %>
      <div class="notice-alert">
        <p class="notice"><%= notice %></p>
    <% elsif alert %>
      <div class="notice-alert">
        <p class="alert"><%= alert %></p>
    <% end %>
    </div>
  </header>
  <%= yield %>
<footer>
    <%= render partial: 'layouts/footer' %>
</footer>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
