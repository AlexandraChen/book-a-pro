<div class="container spacer">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2><%= t("edit_profile") %></h2> <!--<%= resource_name.to_s.humanize %>-->

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email%><br />
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: :email, disabled: true%>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: :name %>
        </div>

        <div class="field">
          <%= f.label :password %> <i><%= t("password_no_change") %></i><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: t("password_new") %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: t("password_new") %>
        </div>

        <div class="field">
          <%= f.label :current_password %> <i><%= t("password_current") %></i><br />
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: :current_password %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Update", class: "btn btn-default col-sm-12" %>
        </div>
      <% end %>
      <br>
      <br>
      <%= link_to "Back", :back %>

      <br>
      <br>
      <p>Unhappy?</p>
      <%= link_to t("account_delete"), registration_path(resource_name), data: { confirm: t("sure_delete") }, method: :delete %>
     </div>
  </div>
</div>
